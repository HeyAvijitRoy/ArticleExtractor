{
  "manifest_version": 3,
  "name": "Article Extractor (Newspaper3k)",
  "version": "2.0",
  "description": "Uses a local Python server with Newspaper3k to extract article text.",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
